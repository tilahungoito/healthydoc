# Weather API Configuration
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here
NEXT_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Speech-to-Text API (Voice Input)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_SPEECH_TO_TEXT_API_KEY=your_google_speech_api_key_here
NEXT_PUBLIC_GOOGLE_SPEECH_TO_TEXT_API_KEY=your_google_speech_api_key_here

# Voice Input Configuration
ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
SPEECH_LANGUAGE=en
SPEECH_SAMPLE_RATE=16000

# AI Provider Configuration
AI_PROVIDER=groq
NEXT_PUBLIC_AI_PROVIDER=groq

# Translation Providers (Primary -> Fallbacks)
# Google Cloud Translation: enable API and create API key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
# Azure Translator: create Translator resource, capture key & region
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_azure_region_here
# Optional custom endpoint if using sovereign cloud
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
# Amazon Translate: IAM user with Translate permissions
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=your_aws_region_here

# Groq AI Configuration (Primary)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
# Recommended for professional diagnosis: llama-3.1-70b-versatile

# OpenAI Configuration (Fallback)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
# Recommended for professional diagnosis: gpt-4

# Hugging Face Configuration (Optional)
HF_MODEL_NAME=gpt2
HF_USE_QUANTIZATION=False
# Recommended: Use medical-specific models like ClinicalBERT

# Medical Database APIs (For Worldwide Data)
# These are optional but recommended for professional diagnosis

# PubMed API (Free, no key required for basic usage)
# https://www.ncbi.nlm.nih.gov/books/NBK25497/
